package main

import (
	"fmt"
	"os"
	"os/exec"
	"syscall"
)

func main() {
	if len(os.Args) < 2 {
		fmt.Println("usage: mdocker run <command>")
		return
	}

	switch os.Args[1] {
	case "run":
		run()
	case "child":
		child()
	default:
		fmt.Println("unknown command")
	}
}

func run() {
	cmd := exec.Command("/proc/self/exe", append([]string{"child"}, os.Args[2:]...)...)
	cmd.Stdin = os.Stdin
	cmd.Stdout = os.Stdout
	cmd.Stderr = os.Stderr

	cmd.SysProcAttr = &syscall.SysProcAttr{
		Cloneflags: syscall.CLONE_NEWUTS |
			syscall.CLONE_NEWPID |
			syscall.CLONE_NEWNS,
	}

	if err := cmd.Run(); err != nil {
		panic(err)
	}
}

func child() {
	fmt.Println("Running container...")

	if err := syscall.Sethostname([]byte("mdocker")); err != nil {
		panic(err)
	}

	rootfs := "./rootfs"

	if err := syscall.Mount("", "/", "", syscall.MS_PRIVATE|syscall.MS_REC, ""); err != nil {
		panic(err)
	}

	if err := syscall.Mount(rootfs, rootfs, "", syscall.MS_BIND|syscall.MS_REC, ""); err != nil {
		panic(err)
	}

	if err := os.MkdirAll(rootfs+"/.old", 0700); err != nil {
		panic(err)
	}

	if err := syscall.PivotRoot(rootfs, rootfs+"/.old"); err != nil {
		panic(err)
	}

	// 6️⃣ Switch to new root
	if err := os.Chdir("/"); err != nil {
		panic(err)
	}

	// 7️⃣ Unmount old root
	if err := syscall.Unmount("/.old", syscall.MNT_DETACH); err != nil {
		panic(err)
	}
	if err := os.RemoveAll("/.old"); err != nil {
		panic(err)
		if err := syscall.Mount("proc", "/proc", "proc", 0, ""); err != nil {
		panic(err)
	}

	if err := syscall.Mount("tmpfs", "/dev", "tmpfs", 0, ""); err != nil {
		panic(err)
	}
	if err := os.MkdirAll("/dev/pts", 0755); err != nil {
		panic(err)
	}
	if err := syscall.Mount("devpts", "/dev/pts", "devpts", 0, ""); err != nil {
		panic(err)
	}

	d := exec.Command(os.Args[2], os.Args[3:]...)
	cmd.Stdin = os.Stdin
	cmd.Stdout = os.Stdout
	cmd.Stderr = os.Stderr

	if err := cmd.Run(); err != nil {
		panic(err)
	}
}

